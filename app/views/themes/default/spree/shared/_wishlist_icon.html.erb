<% background_color ||= '#000' %>
<div class="relative">
  <%= render 'spree/shared/icons/heart' %>
  <% if current_wishlist && current_wishlist.wished_items_count > 0 %>
    <span
      class="cart-counter w-4 h-4 bg-black text-white rounded-full text-[8px] font-extrabold absolute top-[10px] right-0 flex items-center justify-center"
      id="wishlist-icon-count"
    >
      <%= current_wishlist.wished_items_count %>
    </span>
  <% end %>
</div>
